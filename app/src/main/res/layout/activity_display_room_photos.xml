<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayRoomPhotos">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/pink"
        android:id="@+id/home_nav"
        android:orientation="horizontal"
       android:gravity="top"
        android:padding="5px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sunrise hostels"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:textFontWeight="30"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:id="@+id/navAdmin"
            android:textSize="20dp"

            android:textFontWeight="30"
            android:layout_marginLeft="50dp"
            android:textColor="@color/green"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="profile"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/green"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loginicon"
                android:id="@+id/navUserLogin"
                android:textSize="20dp"
                android:textFontWeight="30"
                android:textColor="@color/green"
                />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_nav"
        android:layout_marginTop="20dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:src="@mipmap/room1"
            android:scaleType="fitXY"
            android:minHeight="300dp"
            android:layout_marginTop="10dp"
            />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:src="@mipmap/room2"
                android:scaleType="fitXY"
                android:minHeight="300dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:src="@mipmap/room3"
                android:scaleType="fitXY"
                android:minHeight="300dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:src="@mipmap/room4"
                android:scaleType="fitXY"
                android:minHeight="300dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:src="@mipmap/room5"
                android:scaleType="fitXY"
                android:minHeight="300dp"
                android:layout_marginTop="10dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:src="@mipmap/room2"
                android:scaleType="fitXY"
                android:minHeight="300dp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

    </ScrollView>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>