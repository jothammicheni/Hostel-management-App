<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@color/pink"
            android:id="@+id/home_nav"
            android:orientation="horizontal"

            android:padding="5px"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sunrise hostels"
                android:textColor="@color/green"
                android:textSize="20dp"
                android:textFontWeight="30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:id="@+id/navAdmin"
                android:textSize="20dp"

                android:textFontWeight="30"
                android:layout_marginLeft="50dp"
                android:textColor="@color/green"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="profile"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/green"
                    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:background="@drawable/loginicon"
                android:id="@+id/navUserLogin"
                android:textSize="20dp"

                android:textFontWeight="30"
                android:textColor="@color/green"
             />

            </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_nav"
            android:gravity="center"
            android:layout_marginTop="70dp"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                >
               <Button
                   android:layout_width="200dp"
                   android:layout_height="50dp"
                   android:text="Available Roms"
                   android:id="@+id/displayRoomsBtn"
                   android:background="@color/green"
                   android:width="300dp"
               />
                <Button
                    android:layout_width="200dp"
                    android:layout_margin="10dp"
                    android:layout_height="50dp"
                    android:text="check room Photos"
                    android:id="@+id/ViewRoomsPhotosBtn"
                    android:background="@color/blue"

                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>